{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1120px",
			"wideSize": "1240px"
		},
		"position": {
			"sticky": true
		},
		"color": {
			"palette": [
				{
					"color": "#f0f0f0",
					"name": "Light Gray",
					"slug": "light-gray"
				},
				{
					"color": "#333",
					"name": "Dark Gray",
					"slug": "dark-gray"
				},
				{
					"color": "#D63E4B",
					"name": "Crimson",
					"slug": "crimson"
				},
				{
					"color": "#48655E",
					"name": "Forest",
					"slug": "forest"
				},
				{
					"color": "#59BDB4",
					"name": "Turquoise",
					"slug": "turquoise"
				}
			]
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{ "name": "Small", "slug": "small", "size": "14px" },
				{ "name": "Body", "slug": "body", "size": "18px" },
				{ "name": "Medium", "slug": "medium", "size": "20px" },
				{ "name": "Large", "slug": "large", "size": "24px" },
				{ "name": "Extra Large", "slug": "extra-large", "size": "28px" },
				{ "name": "Title", "slug": "title", "size": "40px" },
				{ "name": "Hero", "slug": "hero", "size": "50px" }
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		},
		{
			"area": "hero",
			"name": "hero",
			"title": "Hero"
		}
	],
	"customTemplates": [
		{
			"title": "Page No Title",
			"postTypes": [ "page" ],
			"name": "page-no-title"
		}
	],
	"patterns": [
		"wpdevday/test-pattern"
	],
	"version": 3
}
